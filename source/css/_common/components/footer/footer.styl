.footer {
  font-size: 12px;
  color: $grey-dark;

  img { border: none; }
}

.footer-inner { text-align: center; }

.fontawesome {
  display: inline-block;
  margin: 0 3px;
  font-size: 11px;
}

.powered-by,
.theme-info { display: inline-block; }

.cc-license {
  margin-top: 10px;
  text-align: center;

  .cc-opacity {
    opacity: 0.7;
    border-bottom: none;

    &:hover { opacity: 0.9; }
  }

  img { display: inline-block; }
}
